<h1>New Game</h1>
<p>Find me in app/views/games/new.html.erb</p>
<% @start_time %>
<h2><%= @letters %></h2>
<form action="/score" method="post">
  <label for="answer" id="question-label">What is the longest word you can find?</label>
  <input type="text" name="answer" id="player-answer" placeholder="Enter your word">
  <input type="submit" value="Check Answer">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
</form>